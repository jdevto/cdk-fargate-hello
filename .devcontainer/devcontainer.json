{
  "name": "Python 3",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers-extra/features/curl-apt-get:1": {},
    "ghcr.io/devcontainers-extra/features/aws-cdk:2": {},
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "settings": {
      "editor.formatOnSave": true,
      "editor.formatOnPaste": true,
      "editor.tabSize": 4,
      "editor.insertSpaces": true,
      "files.eol": "\n",
      "python.testing.pytestArgs": [
        "."
      ],
      "files.trimTrailingWhitespace": true,
      "files.trimFinalNewlines": true,
      "files.insertFinalNewline": true,
      "python.formatting.provider": "black",
      "python.formatting.blackArgs": ["--line-length=79", "--safe"],
      "python.linting.enabled": true,
      "python.linting.flake8Enabled": true,
      "python.linting.mypyEnabled": true,
      "python.linting.flake8Args": ["--max-line-length=79", "--show-source"],
      "python.analysis.extraPaths": [
        "./src"
      ],
      "python.pythonPath": "/workspaces/cdk-fargate-hello/.venv/bin/python",
      "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
      },
      "prettier.requireConfig": true,
      "terminal.integrated.defaultProfile.linux": "bash",
      "workbench.iconTheme": "vscode-icons",
      "workbench.colorTheme": "Visual Studio Dark",
      "remote.extensionKind": {
        "ms-azuretools.vscode-docker": "workspace"
      }
    },
    "vscode": {
      "extensions": [
        "davidanson.vscode-markdownlint",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "Gruntfuggly.todo-tree",
        "hashicorp.terraform",
        "ms-azuretools.vscode-docker",
        "ms-python.debugpy",
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "ms-python.mypy",
        "streetsidesoftware.code-spell-checker",
        "vscode-icons-team.vscode-icons"
      ]
    }
  },
  "postCreateCommand": ".devcontainer/scripts/postCreate.sh",
  "remoteUser": "root",
  "workspaceFolder": "/workspaces/cdk-fargate-hello",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/cdk-fargate-hello,type=bind,consistency=cached"
}
